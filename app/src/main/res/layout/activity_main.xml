<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFEFC8">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gra w kości. Autor 0000000000"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#A52A2A"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RZUC KOŚCI"
        android:backgroundTint="#D2691E"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/dice1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/k6_0"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/k6_0"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/k6_0"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/dice4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/k6_0"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/dice5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/k6_0"
            android:layout_margin="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania:"
        android:textSize="16sp"
        android:textColor="#A52A2A"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik gry:"
        android:textSize="16sp"
        android:textColor="#A52A2A"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETUJ WYNIK"
        android:backgroundTint="#D2691E"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>
</LinearLayout>
